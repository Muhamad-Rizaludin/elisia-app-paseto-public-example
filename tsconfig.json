{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"],
      "@plugins/*": ["plugins/*"],
      "@routes/*": ["routes/*"],
      "@schemas/*": ["schemas/*"],
      "@relations/*": ["relations/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["bun-types", "node"],
    "outDir": "dist"
  },
  "include": ["src", "tests", "sequelize.config.js"],
  "exclude": ["node_modules", "dist"]
}
